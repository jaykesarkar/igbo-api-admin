{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "src": ["./src"]
    },
    "lib": ["esnext", "DOM"],
    "types": ["cypress", "@testing-library/cypress", "jest"],
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules", "**/.*/"]
}
